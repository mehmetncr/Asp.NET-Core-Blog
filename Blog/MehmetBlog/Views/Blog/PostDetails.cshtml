@model BlogViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout/_UserLayout.cshtml";
}

<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <partial name="_SearchPartialView" />
                        </div>
                        <div class="col-lg-12" id="recentpost">
                            <!--Recent Posts-->
                            <vc:recent-posts></vc:recent-posts>
                            <!--Recent Posts-->
                        </div>
                        <div class="col-lg-12" id="recentpost">
                            <!--Categories-->
                            <vc:Categories></vc:Categories>
                            <!--Categories-->
                        </div>
                        <div class="col-lg-12">
                           
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-post">
                                <div class="blog-thumb">
                                    <img src="@Model.BlogImage" alt="">
                                </div>
                                <div class="down-content">
                                    <span>@Model.Category.CategoryName</span>
                                    <a href="post-details.html"><h4>@Model.BlogTitle</h4></a>
                                    <ul class="post-info">
                                        <li><a>Admin</a></li>
                                        <li><a>May 12, 2020</a></li>
                                        <li><a><vc:comment-count id="@Model.BlogID"></vc:comment-count>Yorum</a></li>
                                    </ul>
                                    <p>
                                        @Model.BlogContent
                                    </p>
                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    <vc:tags id="@Model.BlogID"></vc:tags>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--Add Comment-->
                        <partial name="_AddCommentPartialView" model="new CommentsViewModel{BlogID=@Model.BlogID}">
                            
                            <!--Add Comment-->
                            <div class="col-lg-12">
                                <!--Recent Posts-->
                                <vc:comments id="@Model.BlogID"></vc:comments>
                                <!--Recent Posts-->
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





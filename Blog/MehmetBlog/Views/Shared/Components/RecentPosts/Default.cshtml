@model IEnumerable<RecentPostBlogsViewModel>


<div class="sidebar-item recent-posts">
    <div class="sidebar-heading">
        <h2>Son Postlar</h2>
    </div>
    <div class="content">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a asp-action="PostDetails" asp-controller="Blog" asp-route-id="@item.BlogID">
                        <h6 style="color:black!important ">@item.BlogTitle</h6>
                        <span>@item.BlogCreateDate.ToString("MMM dd, yyyy")</span>
                    </a>
                </li>
            }
          
           
        </ul>
    </div>
</div>
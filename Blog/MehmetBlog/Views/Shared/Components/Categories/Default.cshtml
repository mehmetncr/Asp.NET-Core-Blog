@model IEnumerable<CategoryViewModel>

<div class="sidebar-item categories">
    <div class="sidebar-heading">
        <h2>Kategoriler</h2>
    </div>
    <div class="content">
        <ul>
            @foreach (var item in Model)
            {
                <li><a asp-action="Index" asp-controller="Blog" asp-route-id="@item.CategoryID">- @item.CategoryName</a></li>
            }

        </ul>
    </div>
</div>
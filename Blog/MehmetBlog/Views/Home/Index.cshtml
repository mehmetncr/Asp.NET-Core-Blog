@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="TemplateMo">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap" rel="stylesheet">

    <title>Stand CSS Blog by TemplateMo</title>

    <!-- Bootstrap core CSS -->
    <link href="~/templatemo/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/templatemo/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/templatemo/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/templatemo/assets/css/owl.css">
    <!--

    TemplateMo 551 Stand Blog

    https://templatemo.com/tm-551-stand-blog

    -->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- Nav Bar -->
    <partial name="NavPartialView" />
    <!-- Nav Bar -->
    <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="main-banner header-text">
        <div class="container-fluid">
            <div class="owl-banner owl-carousel">
                <!-- Slider -->
                <vc:home-slider></vc:home-slider>
                <!-- Slider -->
            </div>
        </div>
    </div>
    <!-- Banner Ends Here -->


    <section class="blog-posts">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="row">
                            <partial name="_SearchPartialView" />
                            <div class="col-lg-12">
                                <!--Recent Posts-->
                                <vc:recent-posts></vc:recent-posts>
                                <!--Recent Posts-->
                            </div>
                            <div class="col-lg-12">
                                <!--Categories-->
                                <vc:Categories></vc:Categories>
                                <!--Categories-->
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-item tags">
                                    <div class="sidebar-heading">
                                        <h2>Etiketler</h2>
                                    </div>
                                    <div class="content">
                                        <ul>                               
                                            @await Component.InvokeAsync("Tags")

                                        </ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="all-blog-posts">
                        <div class="row">
                            <!--Home Posts-->
                            <vc:home-blog-list></vc:home-blog-list>
                            <!--Home Posts-->
                            <div class="col-lg-12">
                                <div class="main-button">
                                    <a asp-action="Index" asp-controller="Blog">Tüm Postlar</a>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>



    <!--Footer -->
    <partial name="FooterPartialView" />
    <!--Footer -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/templatemo/vendor/jquery/jquery.min.js"></script>
    <script src="~/templatemo/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/templatemo/assets/js/custom.js"></script>
    <script src="~/templatemo/assets/js/owl.js"></script>
    <script src="~/templatemo/assets/js/slick.js"></script>
    <script src="~/templatemo/assets/js/isotope.js"></script>
    <script src="~/templatemo/assets/js/accordions.js"></script>

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>

</body>
</html>